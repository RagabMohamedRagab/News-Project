@model User;
@{
    ViewBag.EmailUser = HttpContextAccessor.HttpContext.Session.GetString("Email");
    ViewBag.PasswordUser = HttpContextAccessor.HttpContext.Session.GetString("Password");
    Layout = null;
}
<!--===============================================================================================-->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
<title>Login</title>
<link href="~/assets/css/mystyle.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="~/assets/css/util.css">
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
            <form asp-area="" asp-controller="News" asp-action="Login" asp-antiforgery="true" class="login100-form validate-form">
                <span class="login100-form-title p-b-33">
                    Account Login
                </span>
                <div asp-validation-summary="ModelOnly"></div>
                <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                    <input class="input100" asp-for="Email" placeholder="Email">
                    <span class="focus-input100-1"></span>
                    <span class="focus-input100-2"></span>
                    <span asp-validation-for="Email"></span>
                </div>
                @if (ViewBag.PasswordUser == null)
                {
                    <div class="wrap-input100 rs1 validate-input" data-validate="Password is required">
                        <input class="input100" asp-for="Password" placeholder="Password">
                        <span class="focus-input100-1"></span>
                        <span class="focus-input100-2"></span>
                        <span asp-validation-for="Password"></span>

                    </div>
                }
                else
                {
                    <div class="wrap-input100 rs1 validate-input" data-validate="Password is required">
                        <input class="input100" asp-for="Password" placeholder="Password" value="@ViewBag.PasswordUser">
                        <span class="focus-input100-1"></span>
                        <span class="focus-input100-2"></span>
                        <span asp-validation-for="Password"></span>

                    </div>}

                <div class="container-login100-form-btn m-t-20">
                    <input type="submit" class="login100-form-btn" value="Sign in">

                </div>

                <div class="text-center p-t-45 p-b-4">
                    <span class="txt1">
                        Forgot
                    </span>

                    <a data-toggle="modal" data-target="#myModal" class="txt2 hov1" style="cursor:pointer">
                        Password?
                    </a>
                </div>

                <div class="text-center">
                    <span class="txt1">
                        Create an account?
                    </span>

                    <a asp-area="" asp-controller="News" asp-action="Register" class="txt2 hov1">
                        Sign up
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
<form>
    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title" style="margin-left:auto">Forget Password</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="md-form mb-4">
                        <i class="fas fa-envelope prefix grey-text text-primary" style="font-size:1.1rem"></i>
                        <label data-error="wrong" data-success="right" for="defaultForm-pass">&nbsp;Your Email</label>
                        <input type="email" id="defaultForm-pass" placeholder="Email" name="Email" value="@ViewBag.EmailUser" class="form-control validate my-2">

                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <a class="btn btn-primary" asp-area="" asp-controller="News" asp-action="ForgetPW" asp-route-Email="@ViewBag.EmailUser">Send</a>
                </div>

            </div>
        </div>
    </div>
</form>


@section Script{
    <partial name="_ValidationScriptsPartial" />
}

