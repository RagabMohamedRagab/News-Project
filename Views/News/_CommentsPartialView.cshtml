@model UserCommentsViewModel;

<section>
    <div class="section-title">
        <h2>Comments</h2>
    </div>
    <form asp-area="" asp-controller="News" asp-action="Comment" asp-antiforgery="true">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="UserName" class="form-label">Your Name</label>
            <input asp-for="UserName" class="form-control" placeholder="Name" />
            <span asp-validation-for="CommentUser"></span>
        </div>
        <br />

        <div class="form-group">
            <label asp-for="CommentUser" class="form-label">Your Comment</label>
            <textarea asp-for="CommentUser" class="form-control  my-2" rows="3" placeholder="Message"></textarea>
            <span asp-validation-for="CommentUser"></span>

        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary my-2" value="Post">
        </div>
    </form>
</section>
@section Script{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



