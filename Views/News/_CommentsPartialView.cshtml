@model UserCommentsViewModel;

<section>
    <form asp-area="" asp-controller="News" asp-action="Comment" asp-antiforgery="true">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="UserName">First Name</label>
            <input asp-for="UserName" class="form-control my-2"  placeholder="Your Name">
            <span asp-validation-for="UserName"></span>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="CommentUser">Comment</label>
            <textarea asp-for="CommentUser" class="form-control  my-2" rows="3" placeholder="Message"></textarea>
            <span asp-validation-for="CommentUser"></span>

        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary my-2"  placeholder="Your Name">
        </div>
    </form>
</section>
@section Script{ 
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}