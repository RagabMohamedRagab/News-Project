@model IEnumerable<New>;
@{
    ViewData["Title"] = "New";
}
<div class="wrapper">
    <div class="section-title">
        <h2>@ViewBag.TypeNews</h2>
    </div>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card mx-30 mb-3">
                        <img src="https://i.postimg.cc/WzjcC7Hb/1.jpg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title" style="text-transform:capitalize">
                                @item.Title
                            </h5>

                            <p class="card-text">
                                @item.Topic
                            </p><h6 lang="en" class="text-primary">
                                @item.Date
                            </h6>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>





